<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackgroundBorderless"
    tools:context=".UserManagement.ManageUserFragment">

    <!-- View the List of System Users -->
    <TextView
        android:id="@+id/tvViewUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View System Users"
        android:drawableStart="@drawable/baseline_visibility_24"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="#333333"
        android:background="?android:attr/selectableItemBackground"
         />

    <!-- Add a New User -->
    <TextView
        android:id="@+id/tvAddUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New User"
        android:drawableStart="@drawable/baseline_group_add_24"
        android:drawablePadding="8dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="#333333"
        android:background="?android:attr/selectableItemBackground"
       />

    <!-- View Login History of a User -->
    <TextView
        android:id="@+id/tvViewLoginHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Login History"
        android:drawableStart="@drawable/baseline_history_24"
        android:drawablePadding="8dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="#333333"
        android:background="?android:attr/selectableItemBackground"
        />
</LinearLayout>

